<!-- Assign Interviewer Modal -->
<div class="modal fade" id="addInterviewer">
  <div class="modal-dialog form-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Assign Student</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form
          method="POST"
          action="/students/<%= student._id %>/assign_interviewer"
          class="needs-validation"
          novalidate
        >
          <select name="interviewer" class="form-control">
            <option value="" selected disabled>Select Interviewer</option>
            <% interviewers.forEach((interviewer) => { %>
            <option value="<%= interviewer._id  %>"><%= interviewer.name %> - <%= interviewer.company %></option>
            <% }); %>
          </select>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success">Assign Student</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

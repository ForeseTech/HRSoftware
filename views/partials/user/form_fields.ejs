<input type="text" class="form-control" name="name" placeholder="Enter Name" required />

<select name="role" class="form-control mt-2" required>
  <option value="" selected disabled>Select User Role</option>
  <option value="Interviewer">Interviewer / HR</option>
  <option value="Incharge">Student Incharge</option>
  <option value="Admin">Admin</option>
</select>

<input type="text" name="company" class="form-control d-none mt-2" placeholder="Enter Company Name" />

<select name="date" class="form-control mt-2 d-none">
  <option value="" selected disabled>Select Date</option>
  <option value="2021-02-20">20 February, 2021</option>
  <option value="2021-02-21">21 February, 2021</option>
  <option value="2021-02-27">27 February, 2021</option>
  <option value="2021-02-28">28 February, 2021</option>
</select>

<select name="interviewer" class="form-control mt-2 d-none">
  <option value="" selected disabled>Select the HR You Are Incharge For</option>
  <% users.forEach((user) => { %>
    <% if(user.role === "Interviewer") { %>
      <% date = new Date(user.date) %> 
      <% day = date.getDate() %> 
      <option value="<%= user._id  %>">
        <%= user.name %> - <%= user.company %> (<%= day %> February, 2021)
      </option>
    <% } %>
  <% }); %>
</select>

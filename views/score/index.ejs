<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.ico" />

    <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/custom.css" />

    <!-- Page Title -->
    <title>SCORES | MOCK PLACEMENTS 2021</title>
  </head>

  <body>
    <!-- Include Navbar Partial -->
    <%- include("../partials/navbar.ejs"); %>

    <!-- Container class begins here -->
    <main class="container">
      <!-- Flash Message Partial -->
      <div class="mt-2"><%- include("../partials/flash.ejs") %></div>

      <!-- Navlist for interview date -->
      <nav class="mb-3">
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <a class="nav-item nav-link active" data-toggle="tab" href="#scores20" role="tab">20<sup>th</sup> February, 2021</a>
          <a class="nav-item nav-link" data-toggle="tab" href="#scores21" role="tab">21<sup>st</sup> February, 2021</a>
        </div>
      </nav>

      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="scores20" role="tabpanel">
          <!-- Table for scores for interviews on 20 Feb -->
          <table class="table table-bordered table-hover text-center">
            <thead>
              <th>Register Number</th>
              <th>Student Name</th>
              <th>Interviewer Name</th>
              <th>Interviewer Company</th>
              <th>Comments</th>
              <th>Action</th>
            </thead>
            <tbody>
              <% scores.forEach(score => { %>
                <% date = new Date(score.interviewer.date); %> 
                <% if(date.getDate() == 20) { %>
                  <tr>
                    <td><%= score.student.register_num %></td>
                    <td><%= score.student.name %></td>
                    <td><%= score.interviewer.name %></td>
                    <td><%= score.interviewer.company %></td>
                    <td><%= score.comments %></td>
                    <td>
                      <form action="/scores/<%= score._id %>" method="POST" class="d-inline">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% } %> 
              <% }); %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane fade" id="scores21" role="tabpanel">
          <!-- Table for scores for interviews on 20 Feb -->
          <table class="table table-bordered table-hover text-center">
            <thead>
              <th>Register Number</th>
              <th>Student Name</th>
              <th>Interviewer Name</th>
              <th>Interviewer Company</th>
              <th>Comments</th>
              <th>Action</th>
            </thead>
            <tbody>
              <% scores.forEach(score => { %>
                <% date = new Date(score.interviewer.date); %> 
                <% if(date.getDate() == 21) { %>
                  <tr>
                    <td><%= score.student.register_num %></td>
                    <td><%= score.student.name %></td>
                    <td><%= score.interviewer.name %></td>
                    <td><%= score.interviewer.company %></td>
                    <td><%= score.comments %></td>
                    <td>
                      <form action="/scores/<%= score._id %>" method="POST" class="d-inline">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% } %> 
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <!-- Container class ends here -->

    <!-- Include Footer Partial -->
    <%- include("../partials/footer.ejs"); %>
  </body>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

  <!-- PopperJS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

  <!-- BootstrapJS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

  <!-- DataTablesJS -->
  <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>

  <!-- DataTables for Bootstrap -->
  <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>

  <!-- Script for Form Validation -->
  <script src="/js/validateForms.js"></script>

  <!-- Initialize DataTables -->
  <script>
    $(document).ready(function () {
      $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
      });
      $('table.table').DataTable({ paging: false });
    });
  </script>

</html>
